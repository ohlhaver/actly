<h3>Step 1/3: Choose a title</h3>
<%= form_for @event do |f| %>
  <% if @event.errors.any? %>
    <div class="error_messages">
      <ul>
        <% @event.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
    <div class="field">
    <%= f.label "Enter title" %>
    <%= f.text_field :title %>
  </div>
  <div class="events"><%= f.submit "save", class: "btn btn-small btn-default" %></div>
<% end %>