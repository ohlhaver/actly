<h2> Step 2/3: Suggest a time and place </h2>
<%= form_for @suggestion do |f| %>
  <% if @suggestion.errors.any? %>
    <div class="error_messages">
      <h2>Form is invalid</h2>
      <ul>
        <% @suggestion.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="field">
    <%= f.label "Location or address" %><br />
    <%= f.text_field :address %>
  </div>
   <div class="field">
    <%= f.label :time %><br />
    <%= f.datetime_select :time, :minute_step => 15 %>
  </div>
  <div class="field">
    <%= f.label :notes %><br />
    <%= f.text_field :notes %>
  </div>
  <%= f.hidden_field :event_id, :value => @event.id  %>
  <div class="suggestions"><%= f.submit "Save" %></div>
<% end %>